<header id="header">
  <div class="site-header header-style-1">
    <nav class="navigation navbar navbar-expand-lg navbar-light">
      <div class="container-fluid">
        <div class="row align-items-center">
          <div class="col-lg-2 col-md-6 col-6 d-lg-none d-block">
            <div class="navbar-header">
              {% if section.settings.logo != blank %}
                <a class="navbar-brand" href="/"
                  ><img src="{{ section.settings.logo | image_url: width: 600  }}" width="" height="" alt="logo"
                ></a>
              {% else %}
                <a class="navbar-brand" href="/"
                  ><img src="{{ 'logo.png' | asset_url }}" width="" height="" alt="logo"
                ></a>
              {% endif %}
            </div>
          </div>
          <div class="col-lg-12 col-md-1 col-1">
            <div id="navbar" class="collapse navbar-collapse navigation-holder">
              <button class="menu-close"><i class="ti-close"></i></button>
              <ul class="nav navbar-nav mb-2 mb-lg-0">
                <li>
                  <a href="/">{{ section.settings.home_text }}</a>
                </li>
                <li>
                  <a href="{{section.settings.shop_url}}">{{ section.settings.shop_text }}</a>
                </li>
                <li class="middle-logo">
                  {% if section.settings.logo != blank %}
                    <a href="/"
                      ><img
                        src="{{ section.settings.logo | image_url: width: 600  }}"
                        width=""
                        height=""
                        alt="logo"
                    ></a>
                  {% else %}
                    <a href="/"
                      ><img
                        src="{{ 'logo.png' | asset_url }}"
                        width=""
                        height=""
                        alt="logo"
                    ></a>
                  {% endif %}
                </li>
                <li>
                  <a href="{{section.settings.about_url}}">{{ section.settings.about_text }}</a>
                </li>
                <li>
                  <a href="{{section.settings.contact_url}}">{{ section.settings.contact_text }}</a>
                </li>
              </ul>
            </div>
            <!-- end of nav-collapse -->
          </div>
          <div class="col-lg-3 col-md-5 col-5 d-lg-none dl-block">
            <div class="mobail-menu">
              <button type="button" class="navbar-toggler open-btn">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar first-angle"></span>
                <span class="icon-bar middle-angle"></span>
                <span class="icon-bar last-angle"></span>
              </button>
            </div>
          </div>

          <div class="mini-cart">
            <button class="cart-toggle-btn">
              <i><img src="{{ 'shopping-cart.png' | asset_url }}" width="" height="" alt=""></i>
              <span
                class="cart-count"
              >
                {{- cart.item_count -}}
              </span>
            </button>
            <div class="mini-cart-content">
              <div class="title"></div>
              <button class="mini-cart-close"><i class="ti-close"></i></button>
              <div class="mini-cart-items">
                <p class="top-p">Your Cart ({{ cart.item_count }})</p>
                {% for item in cart.items %}
                  <div class="mini-cart-item clearfix">
                    <div class="mini-cart-item-image">
                      <a href="{{ item.url }}"
                        ><img
                          src="{{ item.image |  image_url: width: 300  }}"
                          width=""
                          height=""
                          alt
                      ></a>
                    </div>
                    <div class="mini-cart-item-des">
                      <h4>
                        <a href="{{ item.url }}">{{ item.title }}</a>
                      </h4>
                      <ul class="product-text-sub">
                        <li>
                          {{ item.variant.title }}
                        </li>
                      </ul>
                      <a
                        href="#"
                        onclick="removeItem({{ forloop.index }}, 0)"
                        class="dlt-btn"
                      >
                        <i class="ti-trash"></i>
                      </a>
                    </div>
                    <div class="pro-single-btn">
                      <span class="price">{{ item.price | money }}</span>
                      <div class="quantity cart-plus-minus">
                        <input
                          type="text"
                          value="{{ item.quantity }}"
                          onkeyup="updateQty({{ forloop.index }})"
                        >
                        <div
                          class="dec qtybutton"
                          onclick="updateQty({{ forloop.index }}, {{ item.quantity | minus: 1 }})"
                        ></div>
                        <div
                          class="inc qtybutton"
                          onclick="updateQty({{ forloop.index }}, {{ item.quantity | plus: 1 }})"
                        ></div>
                        <div
                          class="dec qtybutton"
                          onclick="updateQty({{ forloop.index }}, {{ item.quantity | minus: 1 }})"
                        >
                          -
                        </div>
                        <div
                          class="inc qtybutton"
                          onclick="updateQty({{ forloop.index }}, {{ item.quantity | plus: 1 }})"
                        >
                          +
                        </div>
                      </div>
                    </div>
                  </div>
                {% endfor %}
              </div>
              <div class="mini-cart-action clearfix">
                <ul>
                  <li>Subtotal ({{ cart.item_count }} items)</li>
                  <li>
                    <strong> {{ cart.items_subtotal_price | money }}</strong>
                  </li>
                </ul>
                <div class="mini-btn">
                  <a href="/checkout" class="theme-btn">CONTINUE TO CHECKOUT</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- end of container -->
    </nav>
  </div>
</header>

{% schema %}
{
  "name": "Header Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "url",
      "id": "shop_url",
      "label": "Shop URL"
    },
    {
      "type": "url",
      "id": "about_url",
      "label": "About URL"
    },
    {
      "type": "url",
      "id": "contact_url",
      "label": "Contact URL"
    },
    {
      "type": "text",
      "id": "home_text",
      "label": "Home Text",
      "default": "HOME"
    },
    {
      "type": "text",
      "id": "shop_text",
      "label": "Shop Text",
      "default": "Shop"
    },
    {
      "type": "text",
      "id": "about_text",
      "label": "About Text",
      "default": "About Us"
    },
    {
      "type": "text",
      "id": "contact_text",
      "label": "Contact Text",
      "default": "Contact Us"
    }
  ],
  "presets": [
    {
      "name": "Header Section"
    }
  ]
}
{% endschema %}
