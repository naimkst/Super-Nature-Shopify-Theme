        <h2>{{ section.settings.title }}</h2>
      </div>
      <strong>{{ section.settings.subtitle }}</strong>
      <h3>{{ section.settings.heading }}</h3>
      {{ section.settings.description }}
      <span class="shape1"><img src="{{ 'shape3.png' | asset_url }}" width="" height="" alt=""></span>
      <div class="shape2"><img src="{{ 'footer2.png' | asset_url }}" alt="" width="" height=""></div>
    </div>
  </div>
</div>

