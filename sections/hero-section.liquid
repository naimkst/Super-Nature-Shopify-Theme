<!-- end of header -->
<div class="hero-area">
  <div class="hero-wrap">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6 col-12">
          <div class="hero-text">
            {% comment %}
              <h1 class="wow fadeInUp" data-wow-duration="1200ms">
                Super
                <span class="shape1"
                  ><img
                    src="{{ 'shape1.png' | asset_url }}"
                    width=""
                    height=""
                    alt=""
                ></span>
              </h1>
              <h2 class="wow fadeInUp" data-wow-duration="1400ms">{{ section.settings.title }}</h2>
              <h3 class="wow fadeInUp" data-wow-duration="1600ms">
                {{ section.settings.subtitle }}
                <span
                  class="shape2"
                  ><img src="{{ 'shape3.png' | asset_url }}" alt="" width="" height=""
                ></span>
              </h3>
            {% endcomment %}

            <div class="heroImg">
              {% if section.settings.left_image != blank %}
                <img src="{{ section.settings.left_image | image_url: width: 1920 }}" width="" height="" alt="">
              {% else %}
                <img src="{{'hero_home.png' | asset_url}}" width="" height="" alt="">
              {% endif %}
            </div>
            <div class="hero-btn">
              <a href="{{ section.settings.button_url }}" class="theme-btn">{{ section.settings.button_text }}</a>
            </div>
          </div>
        </div>
        <div class="col-lg-6 col-12">
          <div class="hero-img">
            <div class="main-img">
              <img src="{{ section.settings.image | image_url: width: 1300  }}" width="" height="" alt="">
            </div>
            {% comment %}
              <div class="shape1">
                <img src="{{ 'leaf1.png' | asset_url }}" width="" height="" alt="">
              </div>
            {% endcomment %}
            {% comment %}
              <div class="shape2 wow zoomIn" data-wow-duration="1800ms">
                <img src="{{ 'thumb1.png' | asset_url }}" alt="" width="" height="">
              </div>
            {% endcomment %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .heroImg img {
    margin-bottom: 50px;
  }
  @media (max-width: 800px) {
    .hero-area .hero-text {
      max-width: 100%;
    }
    .heroImg img {
      margin-left: 0px;
    }
    .hero-btn {
      text-align: center;
      margin-left: 0px;
      margin-bottom: 30px;
    }
    .heroImg img {
      margin-bottom: 20px;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Super Good Shot"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "From Nature"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
